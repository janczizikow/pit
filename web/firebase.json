{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**", "_redirects"],
		"trailingSlash": true,
		"cleanUrls": true,
		"rewrites": [
			{
				"source": "/api/**",
				"run": {
					"serviceId": "pit",
					"region": "europe-west3",
					"pinTag": false
				}
			}
		],
		"headers": [
			{
				"source": "/api/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-store"
					}
				]
			},
			{
				"source": "_app/immutable/**/*.@(js|css|svg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, immutable, max-age=31536000"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg|webp|eot|otf|ttf|ttc|woff|woff2)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=7200"
					}
				]
			},
			{
				"source": "404.html",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "/",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "/discord/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "/submission/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache, no-store, must-revalidate"
					}
				]
			}
		]
	}
}
